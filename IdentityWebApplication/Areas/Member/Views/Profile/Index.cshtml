@model IdentityWebApplication.Areas.Member.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Edit Profile</h1>
<form method="post" enctype="multipart/form-data">
    @Html.Label("Your Name")
    <input type="text" asp-for="name" class="form-control" />
    <br />
    @Html.Label("Your Surname")
    <input type="text" asp-for="surname" class="form-control" />
    <br />
    @Html.Label("Your Email")
    <input type="text" asp-for="mail" class="form-control" />
    <br />
    @Html.Label("Your Password")
    <input type="text" asp-for="password" class="form-control" />
    <br />
    @Html.Label("Confirm Password")
    <input type="text" asp-for="confirmpassword" class="form-control" />
    <br />
    @Html.Label("Your Phone Number")
    <input type="text" asp-for="phonenumber" class="form-control" />
    <br />
    <div class="form-group">
        <label>Choose Profile Picture</label>
        <br />
        <input type="file" asp-for="Image"/>
    </div>
    <br/>
    <button class="btn btn-primary">Save Profile</button>
</form>

